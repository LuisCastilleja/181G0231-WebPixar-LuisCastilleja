@model Pelicula
@{
    ViewData["Title"] = "DetallePeliculas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="principalVer">
    <div class="container">
            <img class="image1" src="/images/banners/@String.Concat(Model.Id,"_b.jpg")">
            <div class="overlay">
                <img class="image2" src="/images/banners/@String.Concat(Model.Id,"_b.png")">
            </div>
    </div>
    <div class="datosPelicula">
        <h1>@Model.Nombre</h1>
        <h2>@String.Concat(Model.NombreOriginal," ", "•", " ",Model.FechaEstreno.Value.ToShortDateString())</h2>
        <p>@Model.Descripción</p>

        <div class="personajes">
            <h2>Personajes</h2>
            @foreach (var personaje in Model.Apariciones)
            {
                <div>
                    <a>
                        <img src="/images/personajes/@string.Concat(personaje.IdPersonaje,".jpg")" alt="" />
                    </a>
                    <div class="nombrePelicula">
                        <p>@personaje.IdPersonajeNavigation.Nombre</p>
                    </div>
                </div>
            }         
        </div>
    </div>
</div>

